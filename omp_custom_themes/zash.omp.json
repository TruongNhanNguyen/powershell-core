{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "foreground": "#017e8f",
                    "style": "plain",
                    "template": "@{{ .UserName }} ",
                    "type": "session"
                },
                {
                    "foreground": "#07f84f",
                    "style": "plain",
                    "template": "\u279c",
                    "type": "text"
                },
                {
                    "foreground": "#008394",
                    "properties": {
                        "style": "folder"
                    },
                    "style": "plain",
                    "template": " {{ .Path }}",
                    "type": "path"
                },
                {
                    "foreground": "#ff0000",
                    "properties": {
                        "branch_icon": ""
                    },
                    "style": "plain",
                    "template": " <#2500fa>git(</>{{ .HEAD }}<#2500fa>)</>",
                    "type": "git"
                },
                {
                    "foreground": "#faf600",
                    "style": "plain",
                    "template": " \uf119",
                    "type": "exit"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 2
}
